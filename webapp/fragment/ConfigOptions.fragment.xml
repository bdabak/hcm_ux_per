<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <VBox>
        <Table
            alternateRowColors="true"
            backgroundDesign="Transparent"
            items="{path:'designView>/ConfigOptions', factory: '.createConfigOptionRows', sorter: { path:'Group', group:true }}"
            sticky="ColumnHeaders,HeaderToolbar"
        >
            <headerToolbar>
                <Toolbar visible="{= ${designView>/ConfigOptions}.length > 0 }">
                    <Title text="Konfigürasyon" />
                    <ToolbarSpacer />
                    <Button
                        press=".onSaveConfiguration"
                        icon="sap-icon://save"
                    />
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Title text="Özellik" />
                </Column>
                <Column>
                    <Title text="Değer" />
                </Column>
            </columns>
        </Table>
        <Label text="CSS sınıfları" class="sapUiTinyMarginTop"/>
        <MultiInput tokens="{designView>/CustomStyles}" class="sapUiTinyMarginBottom"  tokenUpdate=".onStyleUpdated" showValueHelp="false" showSuggestion="false" 
        enableMultiLineMode="true" submit=".onStyleAdded"
        id="idCustomStyleInput">
            <tokens>
                <Token  key="{designView>Key}" text="{designView>Value}"  />
            </tokens>
        </MultiInput>
    </VBox>
</core:FragmentDefinition>
