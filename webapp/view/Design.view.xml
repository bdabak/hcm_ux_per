<mvc:View
    controllerName="com.thy.ux.per.controller.Design"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page showHeader="false">
        <content>
            <HBox
                renderType="Bare"
                width="100%"
                height="100%"
                class="designContainer"
            >
                <items>
                    <core:Fragment
                        type="XML"
                        fragmentName="com.thy.ux.per.fragment.SidePane"
                    />
                    <core:Fragment
                        type="XML"
                        fragmentName="com.thy.ux.per.fragment.DesignPane"
                    />
                </items>
            </HBox>
        </content>
    </Page>
</mvc:View>
