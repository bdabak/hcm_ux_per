<mvc:View
    controllerName="com.thy.ux.per.controller.RequestList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:md="com.smod.ux.mat.controls"
    height="100%"
    busyIndicatorDelay="0"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Page showHeader="false">
        <Table
            id="idRequestList"
            items="{/RequestHeaderSet}"
            noDataText="{i18n>REQUEST_LIST_EMPTY}"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title
                            text="{i18n>REQUEST_LIST}"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <md:Button
                            press=".onNewRequest"
                            variant="Filled"
                            text="{i18n>NEW_ACTION}"
                        >
                            <md:leadingIcon>
                                <md:Icon
                                    icon="person_add"
                                    tooltip="Yeni talep"
                                />
                            </md:leadingIcon>
                        </md:Button>
                        <!-- <md:IconButton
                            press=".onNewRequest"
                            class="emphasizedButton"
                            variant="Filled"
                        >
                            <md:Icon
                                icon="add"
                                tooltip="Yeni talep"
                            />
                        </md:IconButton> -->
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Talep Başlığı" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Durum" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="Son Değişiklik" />
                </Column>
                <Column
                    hAlign="Center"
                    width="10rem"
                >
                    <Text text="İşlemler" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Title
                            text="{RequestTitle}"
                            tooltip="{RequestId}"
                        />
                        <ObjectStatus
                            text="{
                                path: 'WorkflowStatus'
                            }"
                            state="{
                                path: 'WorkflowStatus',
                                formatter: '.formatter.getWfStatusState'
                            }"
                        />
                        <Text text="{
                            path: 'CreationDate',
                            type: 'sap.ui.model.odata.type.DateTime',
                            formatOptions: {
                                pattern: 'dd.MM.yyyy'
                            }
                        } - {
                            path: 'CreationTime',
                            type: 'sap.ui.model.odata.type.Time',
                            formatOptions: {
                                pattern: 'HH:mm'
                            }
                        }" />
                        <HBox
                            justifyContent="Center"
                            alignItems="Center"
                        >
                            <md:IconButton
                                press=".onEditRequest"
                                class="sapUiTinyMarginEnd"
                                variant="Filled"
                                cd:request-id="{RequestId}"
                            >
                                <md:icons>
                                    <md:Icon icon="edit" />
                                </md:icons>
                            </md:IconButton>
                            <md:IconButton
                                press=".onDeleteRequest"
                                class="rejectButton"
                                variant="Filled"
                                cd:request-id="{RequestId}"
                            >
                                <md:icons>
                                    <md:Icon icon="delete" />
                                </md:icons>
                            </md:IconButton>
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>